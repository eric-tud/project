{% extends 'base.html.twig' %}

{% block title %}Attendance index{% endblock %}

{% block body %}
    <h1>Attendance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Time</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attendance in attendances %}
            <tr>
                <td>{{ attendance.id }}</td>
                <td>{{ attendance.date ? attendance.date|date('Y-m-d') : '' }}</td>
                <td>{{ attendance.time ? attendance.time|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('attendance_show', {'id': attendance.id}) }}">show</a>
                    <a href="{{ path('attendance_edit', {'id': attendance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attendance_new') }}">Create new</a>
{% endblock %}
